<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/t"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="自定义区"
                android:textColor="@android:color/holo_blue_dark" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="4dp"
                android:src="@drawable/dropbar" />

            <Button
                android:id="@id/button_format"
                style="@style/ib.a"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="插入HTML标签"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:hint="输入文字" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TableLayout style="@style/tl">

                <TableRow>

                    <TextView
                        android:id="@+id/si"
                        android:layout_gravity="center"
                        android:text="文字大小" />

                    <SeekBar
                        android:id="@+id/mainSeekBar1"
                        android:layout_height="30dp"
                        android:max="60" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/sp"
                        android:layout_gravity="center"
                        android:text="字间距" />

                    <SeekBar
                        android:id="@+id/mainSeekBar2"
                        android:layout_height="30dp"
                        android:max="60" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_gravity="center"
                        android:text="行间距" />

                    <SeekBar
                        android:id="@+id/mainSeekBar3"
                        android:layout_height="30dp"
                        android:max="3" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <Button
                    android:id="@id/button_fontColor"
                    style="@style/ib"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="颜色设置" />

                <Button
                    android:id="@id/button_gravity"
                    style="@style/ib"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="对齐方向" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>